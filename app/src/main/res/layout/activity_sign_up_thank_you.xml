<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpThankYou">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THANK YOU FOR REGISTERING. A CONFIRMATION LINK HAS BEEN SENT TO YOUR EMAIL."
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingBottom="20dp"/>
        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkBule"
            android:text="Return To Sign In"
            android:id="@+id/signinreturn"
            android:clickable="true"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>